<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="CAR:BIT V2" colour="#cb2026" icon="road">
    <block type="carbit_led"/>
    <block type="carbit_ledRGB"/>
    <block type="carbit_single_led">
      <value name="number_led">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
      <value name="color">
        <shadow type="colour_picker">
          <field name="COLOUR">#ff0000</field>
        </shadow>
      </value>
    </block>
    <block type="carbit_move">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    <block type="carbit_check_line_sensor">
      <value name="num">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    <block type="carbit_line_sensor_read_analog"/>
    <block type="carbit_control_motor">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>
    <block type="carbit_stop"/>
    <block type="carbit_ultrasonic_checkdistance"/>
    <block type="yolobit_ble_start">
      <value name="NAME">
        <shadow type="text"><field name="TEXT">oh-carbit</field></shadow>
      </value>
    </block>
    <block type="yolobit_ble_on_receive_message"></block>
    <block type="carbit_gamepad_message"/>
  </category>
</xml>
